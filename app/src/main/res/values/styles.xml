<resources>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Background and item colors-->
        <item name="android:colorPrimary">@color/primaryColorDark</item>
        <item name="android:colorAccent">@color/accentColor</item>
        <item name="android:itemBackground">@color/primaryColorDark</item>
        <item name="android:actionBarItemBackground">@color/toolbarDark</item>
        <item name="android:windowBackground">@color/primaryColorDark</item>

        <item name="colorAccent">@color/accentColor</item>

        <!-- Text etc. -->
        <item name="android:textColor">@color/textDark</item>
        <item name="android:textColorPrimary">@color/textDark</item>

        <!-- Gridview etc. -->
        <item name="android:gridViewStyle">@color/primaryColorDark</item>
        <item name="toolbarStyle">@style/AppTheme.ActionBarDark</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.ActionButtonDark</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.ActionBarDark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbarDark</item>
        <item name="android:backgroundTint">@color/toolbarDark</item>
    </style>

    <style name="AppTheme.ActionButtonDark" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/accentColor</item>
        <item name="borderWidth">0dp</item>
    </style>


    <!-- Base Light theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.DayNight">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>
