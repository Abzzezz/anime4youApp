<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/nav_anime_list">
    <fragment
            android:id="@+id/nav_anime_list"
            android:name="net.bplaced.abzzezz.animeapp.activities.main.ui.home.ListFragment"
            android:label="@string/app_name"
            tools:layout="@layout/list_fragment_layout">
        <action android:id="@+id/action_nav_anime_list_to_nav_settings" app:destination="@id/nav_anime_list"/>
    </fragment>

    <fragment
            android:id="@+id/nav_changelog"
            android:name="net.bplaced.abzzezz.animeapp.activities.main.ui.changelog.ChangelogFragment"
            android:label="@string/menu_changelog"
            tools:layout="@layout/layout_simple_list">
        <action
                android:id="@+id/action_nav_changelog_to_nav_anime_list"
                app:destination="@id/nav_anime_list"/>
    </fragment>

    <fragment
            android:id="@+id/nav_settings"
            android:name="net.bplaced.abzzezz.animeapp.activities.main.ui.settings.SettingsFragment"
            tools:layout="@layout/fragment_settings">
        <action
                android:id="@+id/action_nav_changelog_to_nav_anime_list"
                app:destination="@id/nav_anime_list"/>
    </fragment>


    <fragment
            android:id="@+id/show_search"
            android:name="net.bplaced.abzzezz.animeapp.activities.main.ui.search.SearchFragment"
            android:label="Search"
            tools:layout="@layout/layout_simple_list">
        <action
                android:id="@+id/action_download_tracker_to_nav_changelog"
                app:destination="@id/nav_changelog"/>
    </fragment>

</navigation>