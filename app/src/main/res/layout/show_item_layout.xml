<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:maxLength="30"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/show_title"
            android:text="Title: "/>


    <TextView
            android:layout_width="wrap_content"
            android:maxLength="30"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/show_episodes"
            android:text="Episodes:"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/show_title"/>

    <TextView
            android:layout_width="wrap_content"
            android:maxLength="30"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/show_year"
            android:text="Year:"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/show_language"/>

    <ImageView
            android:layout_width="44dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/plus"
            android:id="@+id/add_button"
            app:layout_constraintHorizontal_bias="0.58"
            android:layout_marginStart="295dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/show_episodes"
            android:layout_marginTop="-18dp"
            android:layout_below="@+id/show_episodes"/>

    <TextView
            android:text="Language:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_language"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/show_episodes"/>

</RelativeLayout>